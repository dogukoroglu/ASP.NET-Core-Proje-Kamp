<div class="comment-top">
	<h4>Bir Yorum Bırakın</h4>
	<div class=comment-bottom>
		<form asp-action="PartialAddComment" asp-controller="Comment" method="post">
			<input class="form-control" type="text" name="CommentUserName" placeholder="Adınız Soyadınız" required="">
			<input type="text" class="form-control" name="CommentTitle" placeholder="Başlık Giriniz" required="">
			<textarea class="form-control" name="CommentContent" placeholder="Yorumunuz..." required=""></textarea>
			<input type="hidden" class="form-control" name="BlogId" placeholder="Blog id" value="@ViewBag.CommentId" required="">
			<button type="submit" class="btn btn-primary submit">Yorum Yap</button>
		</form>
	</div>
</div>