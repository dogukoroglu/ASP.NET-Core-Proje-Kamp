@model CoreDemo.Models.AddProfileImages

@{
	ViewData["Title"] = "WritterAdd";
	Layout = "~/Views/Shared/WritterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
	<div class="col-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<h4 class="card-title">Yazar Profil Bilgileri Düzenleme</h4>
				<br />
				@Html.HiddenFor(x=>x.WritterID,new{@class="form-control"})
				<div class="forms-sample">
					<div class="form-group">
						<label for="exampleInputName1">Ad-Soyad</label>
						<input type="text" class="form-control" id="exampleInputName1" asp-for="WritterName" placeholder="Name">
						@Html.ValidationMessageFor(x=>x.WritterName)
					</div>
					<div class="form-group">
						<label for="exampleInputEmail3">Mail Adresi</label>
						<input type="email" class="form-control" id="exampleInputEmail3" asp-for="WritterMail" placeholder="Email">
						@Html.ValidationMessageFor(x=>x.WritterMail)
					</div>
					<div class="form-group">
						<label for="exampleInputPassword4">Şifre</label>
						@Html.PasswordFor(x=>x.WritterPassword, new{@class="form-control"})
						@Html.ValidationMessageFor(x=>x.WritterPassword)
					</div>
					<div class="form-group">
						<label>Görsel</label>
						<input type="file" name="WritterImage" />
					</div>
					<div class="form-group">
						<label for="exampleTextarea1">Hakkında</label>
						@Html.TextAreaFor(x=>x.WritterAbout,10,3,new{@class="form-control"})
					</div>
					<button type="submit" class="btn btn-gradient-primary mr-2">Kaydet</button>
					<button class="btn btn-light">İptal</button>
				</div>
			</div>
		</div>
	</div>

</form>

